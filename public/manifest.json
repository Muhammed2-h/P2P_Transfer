{
    "name": "WarpShare - P2P File Transfer",
    "short_name": "WarpShare",
    "description": "Premium, high-speed, end-to-end encrypted P2P file transfer.",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#030303",
    "theme_color": "#6366f1",
    "icons": [
        {
            "src": "/icon.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icon-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],
    "orientation": "portrait",
    "share_target": {
      "action": "/share",
      "method": "POST",
      "enctype": "multipart/form-data",
      "params": {
        "title": "title",
        "text": "text",
        "url": "url",
        "files": [
          {
            "name": "files",
            "accept": ["*/*"]
          }
        ]
      }
    }
}